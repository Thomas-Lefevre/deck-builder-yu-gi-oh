{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/showUser.css') }}">
{% endblock stylesheets %}


{% block title %}Profile of {{ user.username }} {% endblock %}

{% block body %}
<div class="container-fluid text-white">
    <div class="row col-12">
        <div class="col6">
            <img src="{{asset(app.user.avatar)}}" alt="avatar">
        </div>
        <div class="row col-6 ml-5">
            <div class="fond row col-12">
                <p id="centreEmail" class="font-weight-bold">Email: <br> {{ user.email }}</p>
            </div>
            <div class="fond row col-12">
                <p id="centreUsername" class="font-weight-bold">Username: <br> {{ user.username }}</p>
            </div>
    </div>
</div>
{% if app.user.id is same as(user.id) %}
    <div id="buttonEdit">
        <button type="button" class="btn btn-secondary font-weight-bold"> <a class="text-white"
                href="{{ path('user_edit', {'id': user.id}) }}">EDIT</a> </button>
    </div>
{% endif %}
{% endblock body %}